<h1 class=heading>Editing Book</h1>
<% if @book.errors.any? %>
  <div id="errors">
    <div class=message>
      <%= @book.errors.count %> errors prohibited this book from being saved:
    </div>
    <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
      <% end %>
    </ul>
  </div>
 <% end %>
<body>
  <div class=comment>
    <%=form_with model:@book,local:true do |f| %>
      <p>title</p>
      <%= f.text_field :title %>
      <p>body</p>
      <%= f.text_area :body %></br>

      <%= f.submit 'Update Book' %>

    <% end %>
    <%=link_to "Show", book_path,class:"link" %>
    <%=link_to "Back",books_path ,class:"link"%>
  </div>
</body>