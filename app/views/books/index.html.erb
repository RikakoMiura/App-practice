<body>
  <p class="flash notice">
  <%=flash[:notice]%>
  </p>
  <h1 class=heading>Books</h1>
  <table class=comment>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%=link_to "Show", book_path(book.id),class:"link"%></td>
          <td><%=link_to "Edit",edit_book_path(book.id),class:"link" %></td>
          <td><%=link_to "Destroy",book_path(book.id),method: :delete,"data-confirm"=>"Are you sure?" ,class:"link"%></td>
        </tr>
      <%end%>
    </tbody>
  </table>
  <h2 class=heading>New book</h2>

  <% if @book.errors.any? %>
   <div id="errors">
     <div class=message>
      <%= @book.errors.count %> errors prohibited this book from being saved:
     </div>
     <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
     </ul>
    <% end %>
   </div>
  <div class=comment>
    <%=form_with model:@book,url:'/books',local:true do |f| %>
      <p>title</p>
      <%= f.text_field :title%>
      <p>body</p>
      <%= f.text_area :body%></br>

      <%= f.submit 'Create Book' %>

    <% end %>
  </div>
</body>
